<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contact_App.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="5" CornerRadius="0">
            <Label Text="User SignIn!" HorizontalTextAlignment="Start" TextColor="White" FontSize="20"/>
        </Frame>
        
        <StackLayout Spacing="20" Padding="50" VerticalOptions="Center">

            <StackLayout Spacing="20" Padding="0, 100, 0, 200" VerticalOptions="Center">
                <Entry Placeholder="Login"></Entry>
                <Entry Placeholder="Password" IsPassword="True"></Entry>
            </StackLayout>

            <Button Text="SIGN IN" TextColor="#696969"  BackgroundColor="#D2691E" BorderWidth="1" BorderColor="#696969"></Button>
            <Label Text="SIGN UP" HorizontalTextAlignment="Center"  Padding="30,0,30,10" FontSize="14" TextColor="Blue" TextDecorations="Underline"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
   